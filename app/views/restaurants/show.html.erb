<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Restaurant #<%= @restaurant.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Email</dt>
              <dd><%= @restaurant.email %></dd>

              <dt>Name</dt>
              <dd><%= @restaurant.name %></dd>

              <dt>Address</dt>
              <dd><%= @restaurant.address %></dd>

              <dt>Website url</dt>
              <dd><%= @restaurant.website_url %></dd>

              <dt>Farm</dt>
              <dd><%= @restaurant.farm_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to restaurants_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_restaurant_url(@restaurant.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to restaurant_url(@restaurant.id), :method => "delete", :data => { :confirm => "Do you really want to delete this restaurant?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
